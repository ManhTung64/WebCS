@model web11.Models.Student

<form method="post" asp-controller="Student" asp-action="Edit" class="card p-3 bg-light">
    <h1 class="text-primary">Edit</h1>
    <div class="form-group">
        <label asp-for="StudentId"> </label>
        <input class="form-control" asp-for="StudentId"/>
        <span class="text-danger" asp-validation-for="StudentId"></span>
    </div>
    <div class="form-group">
        <label asp-for="Name"> </label>
        <input class="form-control" asp-for="Name"/>
        <span class="text-danger" asp-validation-for="Name"></span>
    </div>
    <div class="form-group">
        <label asp-for="DoB"> </label>
        <input class="form-control" asp-for="DoB"/>
        <span class="text-danger" asp-validation-for="DoB"></span>
    </div>
    <div class="form-group">
        <label asp-for="Email"> </label>
        <input class="form-control" asp-for="Email"/>
        <span class="text-danger" asp-validation-for="Email"></span>
    </div>
    <div class="form-group">
        <label asp-for="Grade"> </label>
        <input class="form-control" asp-for="Grade"/>
        <span class="text-danger" asp-validation-for="Grade"></span>
    </div>
    <div class="form-group">
        <label asp-for="Image"> </label>
        <input class="form-control" asp-for="Image"/>
        <span class="text-danger" asp-validation-for="Image"></span>
    </div>
    <div class="form-group">
        <input type="submit" class="btn btn-info form-control" value="Send"/>
    </div>
</form>