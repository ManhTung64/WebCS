@model web9.Models.Employee

<form method="post" asp-controller="Employee" asp-action="Create" class="card p-3 bg-light">
    <h1 class="text-primary">Add neww</h1>
    <div class="form-group">
        <label asp-for="Name"> </label>
        <input class="form-control" asp-for="Name"/>
        <span class="text-danger" asp-validation-for="Name"></span>
    </div>
    <div class="form-group">
        <label asp-for="DoB"> </label>
        <input class="form-control" asp-for="DoB"/>
        <span class="text-danger" asp-validation-for="DoB"></span>
    </div>
    <div class="form-group">
        <label asp-for="Address"> </label>
        <input class="form-control" asp-for="Address"/>
        <span class="text-danger" asp-validation-for="Address"></span>
    </div>
    <div class="form-group">
        <label asp-for="Position"> </label>
        <input class="form-control" asp-for="Position"/>
        <span class="text-danger" asp-validation-for="Position"></span>
    </div>
    <div class="form-group">
        <label asp-for="Salary"> </label>
        <input class="form-control" asp-for="Salary"/>
        <span class="text-danger" asp-validation-for="Salary"></span>
    </div>
    <div class="form-group">
        <input type="submit" class="btn btn-info form-control" value="Send"/>
    </div>
</form>