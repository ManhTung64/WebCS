@model List<Product>

    <table class="table table-bordered">
        <thead>
            <tr>
                <th>Id</th>
                <th>name</th>
                <th>Price</th>
                <th>Quantity</th>
                <th>Color</th>
            </tr>
        </thead>
        <tbody>
            @foreach(var product in Model)
            {
                <tr>
                    <td>@product.Id</td>
                    <td>@product.ProductName</td>
                    <td>@product.Price</td>
                    <td>@product.Quantity</td>
                    <td>@product.Color</td>
                    <td><a asp-controller="Product" asp-action="Detail" asp-route-id="@product.Id">Detail</a></td>
                </tr>
            }
        </tbody>
    </table>