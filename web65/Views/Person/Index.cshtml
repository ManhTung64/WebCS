@model List<Person>

<div class="col-md-8 text-center mt-3">
<table class="table table-bordered">
    <thead>
        <tr>
            <th colspan="5">Person list</th>
            <th >  
                <a class="btn btn-primary" asp-controller="Person" asp-action="Add">Add more</a>
            </th>
        </tr>
        <tr>
            <th>No.</th>
            <th>Name</th>
            <th>Age</th>
            <th>Mobile</th>
            <th>Image</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var person in Model)
        {
                    <tr>
                        <td>@(Model.IndexOf(person) + 1)</td>
                        <td>@person.Name</td>
                        <td>@person.Age</td>
                        <td>@person.Mobile</td>
                        <td>
                            <img src="@person.Image" width="100" height="100">
                        </td>
                    </tr>
        }
    </tbody>
</table>
</div>
