@model web65.Models.Person

<form class="text-center card p-3 bg-light" method="post" asp-controller="Person" asp-action="Edit">
    <h2 class="text-primary bg-light">Add new person</h2>
    <input type="hidden" name="id" value="@ViewBag.Id"/>
    <div class="form-group">
        <label class="text-success">Name</label>
        <input class="form-control" asp-for="Name"/>
    </div>
    <div class="form-group">
        <label class="text-success">Age</label>
        <input class="form-control" asp-for="Age"/>
    </div>
    <div class="form-group">
        <label class="text-success">Mobile</label>
        <input class="form-control" asp-for="Mobile"/>
    </div>
    <div class="form-group">
        <label class="text-success">Image</label>
        <input class="form-control" asp-for="Image"/>
    </div>
    <div class="form-group">
        <input class="btn btn-secondary" type="submit" value="Edit"/>
    </div>
</form>
